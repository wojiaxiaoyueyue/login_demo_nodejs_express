<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <form name="loginForm" method="post" accept-charset="utf-8" onSubmit="return false;">
      <h1>Welcome to Login_Demo</h1>
      <div class="row">
        <input type="text" id="userName" placeholder="Please input your userName" required />
      </div>
      <div class="row">
        <input type="password" id="passwd" placeholder="Please input your password"/>
      </div>
      <div class="row">
        
    
        <button type="button" id="login">Login</button>

        <button type="button" id="register">Register</button>
      <!--  
        <input type="submit" id="login" value="Login"/>-->
      </div> 
    </form>

    
    <script type="text/javascript" src="javascripts/jquery-1.9.1.min.js"></script>
    <script type="text/javascript">
    $(function(){
        $("#login").click(function(){
          var name = $("#userName").val();
          var pwd = $("#passwd").val();
          var data = {"userName": name, "passwd": pwd};
          console.log('in ajax');
          console.log(name);
          console.log(pwd);
          $.ajax({
            url:'/',
            type:'post',
            data: data,
            success: function(data, status){
              if(status == 'success'){

                location.href = '/afterLogin';
              }
            },
            error:function(data, status){
              if(status == 'error'){
                alert("input error");
                location.href="/";
              }
            }
          });
        });

        $("#register").click(function(){
            location.href="/Register";
        });
    });
    </script>
  

  </body>
</html>
